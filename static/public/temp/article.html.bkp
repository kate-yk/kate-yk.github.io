        hero: "https://picsum.photos/seed/14/1200/600",
        body: "<p class='lead'>Stay productive from anywhere.</p><p>Set up a dedicated workspace, maintain regular hours, and communicate effectively with your team.</p>",
        tags: ["career", "productivity"]
    }
    };

      // Helpers
      const qs = name => new URLSearchParams(window.location.search).get(name);
      const el = id => document.getElementById(id);

      // Load article by id param (fallback to 1)
      const id = qs('id') || '1';
      const article = articles[id];
      if (article) {
        el('articleTitle').textContent = article.title;
        el('articleAuthor').textContent = article.author;
        el('articleDate').textContent = article.date;
        el('articleHero').src = article.hero;
        el('articleHero').alt = article.title;
        el('articleBody').innerHTML = article.body;
      } else {
        el('articleMain').innerHTML = '<p>Article not found. <a href="/temp/public/articles.html">Return to articles</a>.</p>';
      }

      // Related
      const relatedList = document.getElementById('relatedList');
      Object.values(articles).filter(a => a.id !== id).forEach(a => {
        const node = document.createElement('div');
        node.className = 'mb-2';
        node.innerHTML = `<a class="text-decoration-none" href="/temp/public/article.html?id=${a.id}">${a.title}</a><div class="small text-muted">${a.author} • ${a.date}</div>`;
        relatedList.appendChild(node);
      });

      // Search on article page (navigates to /temp/public/articles.html with query param)
      const searchForm = document.getElementById('searchForm');
      searchForm.addEventListener('submit', function (e) {
        e.preventDefault();
        const q = (document.getElementById('searchInput').value || '').trim();
        // go to articles page with query param (could implement more complex client side)
        location.href = '/temp/public/articles.html' + (q ? ('?q=' + encodeURIComponent(q)) : '');
      });

      // Request form submission demo
      const requestForm = document.getElementById('requestForm');
      const submitToast = new bootstrap.Toast(document.getElementById('submitToast'));
      requestForm.addEventListener('submit', function (e) {
        e.preventDefault();
        if (!requestForm.checkValidity()) {
          requestForm.classList.add('was-validated');
          return;
        }
        const fd = new FormData(requestForm);
        console.log('Request payload', {
          title: fd.get('title'),
          description: fd.get('description'),
          tags: (fd.get('tags') || '').split(',').map(s=>s.trim()).filter(Boolean),
          time: new Date().toISOString()
        });
        const modal = bootstrap.Modal.getInstance(document.getElementById('requestModal'));
        if (modal) modal.hide();
        requestForm.reset();
        requestForm.classList.remove('was-validated');
        submitToast.show();
      });

      // Highlight active nav
      document.querySelectorAll('.navbar .nav-link').forEach(a => {
        if (a.getAttribute('href') === '/temp/public/article.html') a.classList.add('active');
      });
    })();
  </script>
  <!-- include.js must come after page content (it injects header/footer and applies accent) -->
  <script src="/temp/src/include.js"></script>
</body>
</html>
