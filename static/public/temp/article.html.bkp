<body>
  <!-- shared header injected here -->
  <div data-include="/temp/public/header"></div>




  <!-- MAIN: small search here (search bar belongs to main) + article -->
  <main class="container my-4" role="main">
    <!-- Search (for convenience on the article page) -->
    <div class="row mb-3">
      <div class="col-12 col-lg-8 mx-auto">
        <form id="searchForm" role="search" aria-label="Search articles">
          <div class="input-group">
            <span class="input-group-text" id="search-icon"><i class="fa-solid fa-magnifying-glass" aria-hidden="true"></i></span>
            <input id="searchInput" class="form-control" type="search" placeholder="Search articles..." aria-label="Search articles" />
            <button class="btn btn-outline-secondary" type="submit" aria-label="Search">Search</button>
          </div>
        </form>
      </div>
    </div>

    <div class="row">
      <div class="col-12 col-lg-8">
        <article id="articleMain" aria-labelledby="articleTitle">
          <h1 id="articleTitle" class="h3">Loading…</h1>
          <div class="text-muted small mb-3">By <span id="articleAuthor">—</span> • <time id="articleDate">—</time></div>
          <img id="articleHero" class="card-img-hero mb-3" src="" alt="" />
          <section id="articleBody">
            <p class="lead">Content will appear here.</p>
          </section>
        </article>
      </div>

      <!-- Sidebar -->
      <aside class="col-12 col-lg-4">
        <div class="sticky-top" style="top:1rem;">
          <div class="mb-3">
            <h6 class="text-uppercase small text-muted">Related</h6>
            <div id="relatedList"></div>
          </div>

          <div class="mb-3">
            <button id="requestSimilarBtn" class="btn btn-outline-primary w-100" data-bs-toggle="modal" data-bs-target="#requestModal">Request similar</button>
          </div>
        </div>
      </aside>
    </div>
  </main>

  <!-- shared footer injected here -->
  <div data-include="/temp/public/footer"></div>


  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

