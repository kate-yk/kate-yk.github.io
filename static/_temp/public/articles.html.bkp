<body>

  <!-- shared header injected here -->
  <div data-include="/temp/public/header"></div>

  <!-- MAIN: Search belongs here (not in nav) + sidebar + feed -->
  <main class="container my-4" role="main">
    <!-- Search row (centered) -->
    <div class="row mb-4">
      <div class="col-12 col-lg-8 mx-auto">
        <form id="searchForm" role="search" aria-label="Search articles">
          <div class="input-group">
            <span class="input-group-text" id="search-icon"><i class="fa-solid fa-magnifying-glass" aria-hidden="true"></i></span>
            <input id="searchInput" class="form-control" type="search" placeholder="Search articles..." aria-label="Search articles" />
            <button class="btn btn-outline-secondary" type="submit" aria-label="Search">Search</button>
          </div>
        </form>
      </div>
    </div>

    <div class="row g-4">
      <!-- Sidebar -->
      <aside class="col-12 col-md-4 col-lg-3 order-2 order-md-1" aria-label="Sidebar with filters">
        <div class="sticky-top" style="top:1rem;">
          <section class="mb-4" aria-labelledby="trendingHeading">
            <h6 id="trendingHeading" class="text-uppercase small text-muted">Trending</h6>
            <ul class="list-unstyled">
              <li><a href="#" class="d-block text-decoration-none py-1">How to present research in 5 minutes</a></li>
            </ul>
          </section>

          <section class="mb-4" aria-labelledby="categoriesHeading">
            <h6 id="categoriesHeading" class="text-uppercase small text-muted">Categories</h6>
            <div class="list-group">
              <button class="list-group-item list-group-item-action active" aria-pressed="true" data-filter="all">All</button>
              <button class="list-group-item list-group-item-action" data-filter="tech">Tech</button>
              <button class="list-group-item list-group-item-action" data-filter="education">Education</button>
              <button class="list-group-item list-group-item-action" data-filter="health">Health</button>
            </div>
          </section>

          <section aria-labelledby="tagsHeading" class="mb-4">
            <h6 id="tagsHeading" class="text-uppercase small text-muted">Tags</h6>
            <div>
              <button class="btn btn-sm btn-light tag-chip" data-tag="research">research</button>
              <button class="btn btn-sm btn-light tag-chip" data-tag="community">community</button>
              <button class="btn btn-sm btn-light tag-chip" data-tag="design">design</button>
            </div>
          </section>
        </div>
      </aside>

      <!-- Article feed -->
      <section class="col-12 col-md-8 col-lg-9 order-1 order-md-2" aria-labelledby="feedHeading">
        <h2 id="feedHeading" class="visually-hidden">Article feed</h2>

        <!-- Grid -->
        <div id="articlesGrid" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4" aria-live="polite">
          <article class="col" data-id="1" data-category="tech" data-tags="research,design">
            <div class="card h-100 card-hover focus-outline">
              <img src="https://picsum.photos/seed/1/640/360" class="card-img-top" alt="Rapid Prototyping Thumbnail">
              <div class="card-body d-flex flex-column">
                <h3 class="card-title h6 mb-2">Rapid Prototyping for Youth Projects</h3>
                <p class="card-text text-muted small mb-2">How to iterate on ideas with minimal resources.</p>
                <div class="mt-auto d-flex justify-content-between align-items-center">
                  <div class="small text-muted">By Alex • Jul 30, 2025</div>
                  <div><a class="btn btn-sm btn-outline-primary" href="/temp/public/article.html?id=1">Read</a></div>
                </div>
              </div>
            </div>
          </article>

          <article class="col" data-id="2" data-category="education" data-tags="community,career">
            <div class="card h-100 card-hover focus-outline">
              <img src="https://picsum.photos/seed/2/640/360" class="card-img-top" alt="Coding Bootcamp Thumbnail">
              <div class="card-body d-flex flex-column">
                <h3 class="card-title h6 mb-2">Community Coding Bootcamp Recap</h3>
                <p class="card-text text-muted small mb-2">Highlights and student projects from our latest cohort.</p>
                <div class="mt-auto d-flex justify-content-between align-items-center">
                  <div class="small text-muted">By Maya • Jul 25, 2025</div>
                  <div><a class="btn btn-sm btn-outline-primary" href="/temp/public/article.html?id=2">Read</a></div>
                </div>
              </div>
            </div>
          </article>

          <article class="col" data-id="3" data-category="health" data-tags="wellness">
            <div class="card h-100 card-hover focus-outline">
              <img src="https://picsum.photos/seed/3/640/360" class="card-img-top" alt="Mindfulness Thumbnail">
              <div class="card-body d-flex flex-column">
                <h3 class="card-title h6 mb-2">Mindfulness for Student Stress</h3>
                <p class="card-text text-muted small mb-2">Daily practices to reduce anxiety during exams.</p>
                <div class="mt-auto d-flex justify-content-between align-items-center">
                  <div class="small text-muted">By Dr. Kim • Jul 14, 2025</div>
                  <div><a class="btn btn-sm btn-outline-primary" href="/temp/public/article.html?id=3">Read</a></div>
                </div>
              </div>
            </div>
          </article>
        </div>

        <!-- Pagination fallback -->
        <nav aria-label="Article pagination" class="mt-4">
